<body>
  <div class="main-edit">
    <h1>Editing Book</h1>

    <%if @book.errors.any?%>
      <%= @book.errors.count%>errors prohibited this book from being saved:
      <ul>
        <%@book.errors.full_messages.each do |message|%>
          <li><%=message%></li>
        <%end%>
      </ul>
    <%end%>

    <%=form_with model: @book, url:book_path(@book.id), method: :patch do |f|%>



      <div><label>Title</label></div>
      <div class="text-field"><%=f.text_field :title%></div>

      <div><label>Body</label></div>
      <div class="text-area"><%=f.text_area :body%></div>

      <div class="submit"><%=f.submit'Update Book'%></div>

    <%end%>


    <div class>
      <%=link_to 'Show',book_path(@book.id)%>
      |
      <%=link_to 'Back',books_path%>
    </div>
  </div>
</body>