<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <td class="td-title">Title</td>
        <td class="td-body">Body</td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book|%>
      <tr>
        <td class="td"><%= book.title %></td>
        <td class="td"><%= book.body %></td>
        <td class="td"><%=link_to 'Show',book_path(book.id)%></td>
        <td class="td"><%=link_to 'Edit',edit_book_path(book.id)%></td>
        <td class="td"><%=link_to'Destroy',destroy_book_path(book.id),method: :delete, "deta-confirm" => "Are you sure?"%></td>
      </tr>
      <%end%>
    </tbody>
  </table>

  <h2>New Book</h2>

  <%=form_with model: @book do |f|%>

    <div><label>Title</label></div>
    <div class="text-field"><%=f.text_field :title%></div>

    <div><label>Body</label></div>
    <div class="text-area"><%=f.text_area :body%></div>

    <div><%=f.submit'Create Box'%></div>

  <%end%>

</body>